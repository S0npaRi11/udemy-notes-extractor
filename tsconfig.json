{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "ES5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  